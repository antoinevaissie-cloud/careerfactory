<div class="row">
  <div class="col-8">
        <%= simple_form_for @batch do |f| %>
            <div class="card">
            <%= f.input :batch_number,
              as: :radio_buttons,
              collection_wrapper_tag: 'div',
              collection_wrapper_class: 'category-wrapper',
              item_wrapper_class: 'category-item',
              input_html: {class: 'category-selector'},
              collection: @batch_numbers%>
            </div>
    <div class="row col-12">
      <%= f.button :submit, class: "btn btn-primary", value: "Next, choose recruiters" %>
    </div>
  </div>
  <div class="col-4 card">
    <%= image_tag "classroom2.jpg"%>
  </div>

<% end %>
</div>
