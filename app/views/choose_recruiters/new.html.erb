<div class="container">
  <div class="row mt-5">
    <h3 class="text-center">Choose the recruiters you want to include</h3>
  </div>
  <%= simple_form_for @recruiter do |f| %>
    <div class="row mt-5">
      <div class="col-8">
        <%= f.input :user_ids,
                    as: :check_boxes,
                    collection: @recruiters.sort_by { |recruiter| recruiter.company.name },
                    input_html: {
                      class: 'tag-selector'
                    },
                    legend_tag: false,
                    item_wrapper_class: 'recruiter-tag-wrapper',
                    label_method: -> (recruiter) {
                      content_tag(:div, class: 'd-flex justify-content-between') do
                          [recruiter.company.name, recruiter.full_name].reduce('') { |c, x|
                            c << content_tag(:span, x)
                          }.html_safe
                      end
                    } %>
      </div>
      <div class="col-4">
        <%= image_tag "recruiters.jpg", class: 'w-100 form-side-image' %>
      </div>
    </div>
    <div class="row mt-5 mb-5">
      <%= f.button :submit, class: "btn btn-primary d-block mx-auto w-50", value: "Next, choose times" %>
    </div>
  <% end %>
</div>
