<html>
  <head>
    <meta charset="utf-8">
    <!-- Need to read device screen width (Bootstrap) -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap & Fontawesome CSS only! -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v6.1.1/css/all.css">
  </head>
  <body>

    <!-- Code here -->
    <div class="container bg-light">
      <div class="row">
        <div class="col-6 d-flex align-items-center bg-light">
          <h1>
            <span data-controller="typed" class="typing-element"></span>
          </h2>
        </div>
        <div class="col-6">
          <h3>
            Configure your campaign
          </h3>
<%= simple_form_for @campaign do |f| %>
  <%= f.input :batch_number, collection: User.select(:batch_number).distinct.order(:batch_number).pluck(:batch_number), label: "Pick a Batch", as: :select %>
  <%# <%= f.input :user_ids, collection: @recruiters, label: "Recruiters", input_html: { class: 'multiselectuser', multiple: true }, label_method: :full_name_and_company, include_hidden: false %> %>
  <%= f.input :user_ids, collection: @recruiters, as: :check_boxes, label: "Recruiters",  label_method: :full_name_and_company, include_hidden: false %>
  <%= f.input :start_date, collection: @start_dates, label: "Start Date", as: :select %>
  <%= f.input :end_date, collection: @end_dates, label: "End Date", as: :select %>
  <%= f.input :slot_size, collection: [15, 30], label: "Slot Size (minutes)", as: :select %>
  <%= f.button :submit, class: "btn btn-primary", button_html: { class: "btn btn-primary" } %>
<% end %>


        </div>
      </div>
    </div>
    <!-- Bootstrap JavaScript library -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>
