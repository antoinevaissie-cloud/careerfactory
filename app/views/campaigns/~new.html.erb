<html>
  <head>
    <meta charset="utf-8">
    <!-- Need to read device screen width (Bootstrap) -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap & Fontawesome CSS only! -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v6.1.1/css/all.css">
  </head>
  <body>

    <!-- Code here -->
    <div class="container">
      <div class="row">
        <div class="col-12 d-flex align-items-center bg-light">
          <h1>
            <span data-controller="typed" class="typing-element"></span>
          </h2>
        </div>
        <div class="col-12">
          <%= simple_form_for @campaign do |f| %>
            <div class="steps">
              <h3>Choose the student batch</h3>
            </div>
            <%= f.input :batch_number,
            as: :radio_buttons,
            collection_wrapper_tag: 'div',
            collection_wrapper_class: 'category-wrapper',
            item_wrapper_class: 'category-item',
            input_html: {class: 'category-selector'},
            collection: User.select(:batch_number).distinct.order(:batch_number).pluck(:batch_number), label:"Pick a batch number"%>
            <div class="steps">
              <h3>Choose the recruiters who should participate</h3>
            </div>
              <%= f.collection_check_boxes :user_ids, @recruiters, :id, :full_name_and_company, {}, { class: 'tag-selector' }%>
            <div class="steps">
              <h3>Pick a start date and a start time</h3>
            </div>
            <%= f.input :start_date, collection: @start_dates, label: "Start Date", as: :select %>
            <div class="steps">
              <h3>Pick an end date and an end time</h3>
            </div>
            <%= f.input :end_date, collection: @end_dates, label: "End Date", as: :select %>
            <div class="steps">
              <h3>Choose the slot size</h3>
            </div>
            <%= f.input :slot_size, collection: [15, 30], label: "Slot Size (minutes)", as: :select %>
            <%= f.button :submit, class: "btn btn-primary", button_html: { class: "btn btn-primary" } %>
          <% end %>
        </div>
      </div>
    </div>
    <!-- Bootstrap JavaScript library -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>
